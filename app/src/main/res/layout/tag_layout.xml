<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/already_tag"/>

            <co.lujun.androidtagview.TagContainerLayout
                android:id="@+id/tagcontainer_already"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                app:container_background_color="#00000000"
                app:container_border_color="#33666666"
                app:container_border_radius="0dp"
                app:container_enable_drag="true"
                app:horizontal_interval="10dp"
                app:tag_background_color="#00000000"
                app:tag_border_color="#330000ff"
                app:tag_clickable="true"
                app:tag_corner_radius="1dp"
                app:tag_enable_cross="true"
                app:tag_theme="none"
                app:vertical_interval="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/add_tag"/>

            <co.lujun.androidtagview.TagContainerLayout
                android:id="@+id/tagcontainer_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                app:container_background_color="#00000000"
                app:container_border_color="#33666666"
                app:container_border_radius="0dp"
                app:horizontal_interval="10dp"
                app:tag_background_color="#00000000"
                app:tag_border_color="#330000ff"
                app:tag_clickable="true"
                app:tag_corner_radius="1dp"
                app:tag_theme="none"
                app:vertical_interval="10dp"
                />

        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/save_fab"
        app:backgroundTint="@color/whitesmoke"
        android:clickable="true"
        app:fabSize="mini"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_check_grey600_48dp"
        />

</RelativeLayout>